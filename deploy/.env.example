# Application
APP_NAME=OpenNotebookLM
APP_PORT=8000
APP_ENV=development
DEBUG=true

# Database
DB_PATH=./data/opennotebook.db
DATABASE_URL=sqlite:///./data/opennotebook.db

# Embedding Backend
EMB_BACKEND=sqlitevec  # Options: sqlitevec, faiss
EMB_MODEL_NAME=BAAI/bge-small-en-v1.5
EMB_DIMENSION=384

# LLM Configuration
LLM_MODE=local  # Options: local, cloud, auto
LOCAL_MODEL_PATH=./models/phi-2.gguf
LOCAL_MODEL_CONTEXT_SIZE=2048
LOCAL_MODEL_MAX_TOKENS=512

# Cloud API Keys (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-3-haiku-20240307

# YouTube Configuration
ENABLE_YT_TRANSCRIPTION=true
YT_API_KEY=

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,txt,md

# Security
SECRET_KEY=change-this-secret-key-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Chunk Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_DOC=1000

# Retrieval Configuration
RETRIEVAL_TOP_K=5
RERANK_ENABLED=true
RERANK_ALPHA=0.7
RERANK_BETA=0.2
RERANK_GAMMA=0.1
