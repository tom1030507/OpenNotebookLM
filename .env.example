# OpenNotebookLM Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=OpenNotebookLM
APP_ENV=development
APP_PORT=8000
DEBUG=false

# Database
DB_PATH=./data/opennotebook.db
DATABASE_URL=sqlite:///./data/opennotebook.db

# Embedding Configuration
EMB_BACKEND=sqlitevec  # Options: sqlitevec, faiss
EMB_MODEL_NAME=BAAI/bge-small-en-v1.5
EMB_DIMENSION=384

# LLM Configuration
LLM_MODE=auto  # Options: local, cloud, auto
LOCAL_MODEL_PATH=./models/llama2.gguf
LOCAL_MODEL_CONTEXT_SIZE=2048
LOCAL_MODEL_MAX_TOKENS=512

# Cloud API Keys (Optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-3-haiku-20240307

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# YouTube Configuration
ENABLE_YT_TRANSCRIPTION=true
YT_API_KEY=

# File Upload Settings
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,txt,md
UPLOAD_PATH=./uploads

# Chunk Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_DOC=1000

# Retrieval Configuration
RETRIEVAL_TOP_K=5
RERANK_ENABLED=true
RERANK_ALPHA=0.7
RERANK_BETA=0.2
RERANK_GAMMA=0.1

# Security
SECRET_KEY=change-this-secret-key-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Webhook Settings (Optional)
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=
